<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>




<table>

  <thead>
    <tr>
      <% if @li_pumpkin_pairs != nil  %>
      <th>Amount</th>
      <th >Pumpkin</th>
      <th >Price per Pumpkin</th>
      <th >Price</th>
    </tr>
    <% end %>
  </thead>

  <tbody>
    <% if @li_pumpkin_pairs != nil  %>
    <% @li_pumpkin_pairs.each do |line_item,pumpkin| %>
      <tr>
        <td><%= line_item.amount %></td>
        <td><%= pumpkin.species %></td>
        <td><%= pumpkin.price %></td>
        <td><%= line_item.price %></td>
        <td></td>
      </tr>
    <% end %>
    <% else %>
    <td><%= @customer.name %> has no orders yet</td>
    <% end %>
  </tbody>
</table>




<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
